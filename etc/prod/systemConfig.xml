<?xml version="1.0" encoding="ISO-8859-1"?>
<config env="prod" default="true">

	<!-- Airline Information -->
	<airline>
		<name>Delta Virtual Airlines</name>
		<domain>deltava.org</domain>
		<code>ACARS</code>
		<db>DVA</db>
		<default>DVA</default>
		<voice>
			<url>rw.deltava.org/DAL</url>
			<ts2>
				<enabled type="Boolean">true</enabled>
				<url>teamspeak://ts2.deltava.org</url>
			</ts2>
		</voice>

		<!-- Default airline codes -->
		<map name="defaultCodes">
			<dva>DAL</dva>
			<afv>AF</afv>
		</map>
	</airline>

	<!-- JDBC data source configuration -->
	<jdbc>
		<driver>com.mysql.jdbc.Driver</driver>
		<url>jdbc:mysql://mysql.deltava.org/acars</url>
		<user>dva</user>
		<pwd>***REMOVED***</pwd>
		
		<map name="connectProperties">
			<useCompression>false</useCompression>
			<connectTimeout>1000</connectTimeout>
			<autoReconnect>true</autoReconnect>
			<cachePrepStmts>true</cachePrepStmts>
			<cacheResultSetMetadata>false</cacheResultSetMetadata>
			<continueBatchOnError>true</continueBatchOnError>
			<useServerPrepStmts>true</useServerPrepStmts>
			<dontTrackOpenResources>true</dontTrackOpenResources>
			<useLocalSessionState>false</useLocalSessionState>
			<elideSetAutoCommits>true</elideSetAutoCommits>
			<cacheServerConfiguration>true</cacheServerConfiguration>
			<useCursorFetch>true</useCursorFetch>
			<maintainTimeStats>false</maintainTimeStats>
			<validationQuery>/* ping */</validationQuery>
		</map>
		
		<pool_size type="Integer">1</pool_size>
		<pool_max_size type="Integer">12</pool_max_size>
		<max_reqs type="Integer">0</max_reqs>
		<auto_commit type="Boolean">true</auto_commit>
		<log_stack type="Boolean">true</log_stack>
	</jdbc>

	<security>
		<auth>org.deltava.security.MirrorAuthenticator</auth>
		<baseDN>ou=dva,o=sce</baseDN>
	</security>

	<schedule>
		<!-- FlightAware download data -->
		<flightaware>
			<enabled type="Boolean">true</enabled>
			<download>
				<user>gvagroup</user>			
				<pwd>***REMOVED***</pwd>			
			</download>
		</flightaware>
		<cache>/var/cache/sched</cache>
	</schedule>
	
	<!-- Weather download locations -->
	<weather>
		<url>
			<metar>ftp://tgftp.nws.noaa.gov/data/observations/metar/stations/</metar>
			<taf>ftp://tgftp.nws.noaa.gov/data/forecasts/taf/stations/</taf>
		</url>	
	</weather>
	
	<!-- Maximum held pirep value -->
	<users>
		<pirep>
			<maxHeld type="Integer">3</maxHeld>
		</pirep>
	</users>

	<!-- Multiplayer properties -->
	<mp>
		<max_range type="Integer">40</max_range>
		<max_aircraft type="Integer">30</max_aircraft>
	</mp>

	<!-- Online network properties -->
	<online>
		<default_network>VATSIM</default_network>
		<list name="networks" attr="network" unique="true">
			<network>VATSIM</network>
			<network>IVAO</network>
		</list>

		<vatsim>
			<status_url>http://usa-s1.vatsim.net/data/status.txt</status_url>
			<validation_url>http://cert.vatsim.net/vatsimnet/idstatus.php</validation_url>
			<banner>vatsim.gif</banner>
			<url>http://www.vatsim.net/</url>
			<local>
				<status>/var/cache/servinfo/vatsim.status</status>
				<info>/var/cache/servinfo/vatsim.info</info>
			</local>
		</vatsim>

		<ivao>
			<status_url>http://www.ivao.aero/whazzup/status.txt</status_url>
			<banner>ivao.png</banner>
			<url>http://www.ivao.aero/</url>
			<local>
				<status>/var/cache/servinfo/ivao.status</status>
				<info>/var/cache/servinfo/ivao.info</info>
			</local>
		</ivao>
	</online>

	<!-- SMTP server data -->
	<smtp>
		<server>pollux.gvagroup.org</server>
		<errors-to>acars@gvagroup.org</errors-to>
		<testMode type="Boolean">false</testMode>
	</smtp>

	<!-- ACARS Server Properties -->
	<acars>
		<daemon>org.deltava.acars.TomcatDaemon</daemon>
		<list name="block" attr="addr">
			<addr>127.0.0.1</addr>
		</list>

		<!-- List of valid protocol revisions -->
		<map name="protocols">
			<v1>org.deltava.acars.xml.v1</v1>
			<v2>org.deltava.acars.xml.v2</v2>
		</map>

		<port type="Integer">15527</port>
		<sleep type="Integer">45000</sleep>
		<timeout type="Integer">120</timeout>
		<ban_length type="Integer">15</ban_length>
		<position_interval type="Integer">30</position_interval>
		<build>
			<map name="minimum">
				<v1_4>77</v1_4>
				<v2_2>95</v2_2>
				<v3_0>100</v3_0>
			</map>

			<map name="beta">
				<b97>1</b97>
				<b100>1</b100>
			</map>

			<latest type="Integer">96</latest>
			<dispatch type="Integer">17</dispatch>
			<viewer type="Integer">1</viewer>
			<list name="noDispatch" attr="build" unique="true">
				<build>95</build>
			</list>
		</build>

		<pool>
			<size type="Integer">192</size>
			<multiple type="Boolean">false</multiple>
			<kill_old type="Boolean">true</kill_old>
			<threads>
				<logic>
					<min type="Integer">1</min>
					<max type="Integer">4</max>
				</logic>
				<write>
					<min type="Integer">1</min>
					<max type="Integer">10</max>
				</write>
			</threads>
		</pool>

		<buffer>
			<send type="Integer">32768</send>
			<recv type="Integer">30720</recv>
			<nio type="Integer">32768</nio>
		</buffer>

		<list name="login_msgs" attr="msg">
			<msg>All messages are logged by user ID and IP address.</msg>
		</list>

		<ack>
			<ping type="Boolean">true</ping>
			<position type="Boolean">true</position>
			<text type="Boolean">false</text>
		</ack>
	</acars>
</config>
