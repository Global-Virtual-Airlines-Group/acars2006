	<!-- SkyMiles caches -->
	<cache id="EliteLevel" max="16" expires="24h" />
	<cache id="EliteStatus" max="512" expires="24h" remote="true" />
	<cache id="EliteYearlyTotal" max="512" expires="12h" />

	<!-- Navigation Data caches -->
    <cache id="NavData" expires="2d" remote="true" />
    <cache id="NavAirway" expires="18h" remote="true" />
    <cache id="NavRunway" expires="1d" remote="true" />
    <cache id="NavSIDSTAR" expires="1d" remote="true" />
    <cache id="NavRoute" expires="12h" remote="true" />
    <cache id="Airspace" expires="1d" remote="true" />
	<cache id="FIRs" max="512" />
	<cache id="FIRIDs" max="256" />
	<cache id="Alternates" remote="true" expires="2d" />
	<cache id="Gates" remote="true" expires="2d" />
	<cache id="GateUsage" remote="true" expires="1d" />
	<cache id="ACARSRunways" remote="true" expires="1d" />
	<cache id="GeoCountryL1" geo="true" expires="86400" max="2048" precision="0.05" />
	<cache id="GeoCountry" remote="true" geo="true" expires="864000" precision="0.01" />
	<cache id="TaxiTime" remote="true" expires="1d" />
	<cache id="ATIS" remote="true" expires="900" />
	<cache id="ATISCodes" max="4" expires="3600" />

	<!-- Weather caches -->
	<cache id="METAR" max="256" expires="1800" />
	<cache id="TAF" max="256" expires="1800" />
	<cache id="FlightAwareMETAR" max="256" expires="1800" />
	<cache id="FlightAwareTAF" max="256" expires="1800" />

	<!-- ServInfo caches -->
	<cache id="ServInfoData" remote="true" expires="300" />
	
	<!-- Track cache -->
	<cache id="ACARSTrackCAS" max="128" expires="30" />

	<!-- System caches -->
	<cache id="AircraftInfo" max="96" expires="2h" />
	<cache id="AircraftInfoALL" max="6" expires="1h" />
	<cache id="EquipmentTypes" max="24" expires="4h" />
	<cache id="Accomplishments" max="24" expires="2h" />
	<cache id="IATACodes" remote="true" expires="4h" />
	<cache id="ScheduleSource" remote="true" expires="1h" />
